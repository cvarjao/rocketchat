    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app.kubernetes.io/name": "mongodb",
          "app.kubernetes.io/managed-by": "Helm",
          "app.kubernetes.io/instance": "${INSTANCE}",
          "helm.sh/chart": "mongodb"
        },
        "name": "${INSTANCE}-mongodb-headless"
      },
      "spec": {
        "clusterIP": "None",
        "ports": [
          {
            "name": "mongodb",
            "port": 27017
          }
        ],
        "selector": {
          "app.kubernetes.io/name": "mongodb",
          "app.kubernetes.io/instance": "${INSTANCE}"
        },
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app.kubernetes.io/name": "mongodb",
          "app.kubernetes.io/managed-by": "Helm",
          "app.kubernetes.io/instance": "${INSTANCE}",
          "helm.sh/chart": "mongodb"
        },
        "name": "${INSTANCE}-mongodb"
      },
      "spec": {
        "ports": [
          {
            "name": "mongodb",
            "port": 27017,
            "targetPort": "mongodb"
          }
        ],
        "selector": {
          "component": "primary",
          "app.kubernetes.io/name": "mongodb",
          "app.kubernetes.io/instance": "${INSTANCE}"
        },
        "type": "ClusterIP"
      }
    },
    {
      "kind": "CronJob",
      "apiVersion": "batch/v1beta1",
      "metadata": {
        "name": "${INSTANCE}-mongodb-backup",
        "creationTimestamp": null,
        "labels": {
          "app.kubernetes.io/name": "mongodbmongodb",
          "app.kubernetes.io/managed-by": "Helm",
          "app.kubernetes.io/instance": "${INSTANCE}",
          "helm.sh/chart": "mongodb"
        }
      },
      "spec": {
        "schedule": "0 0 * * *",
        "concurrencyPolicy": "Allow",
        "jobTemplate": {
          "metadata": {
            "creationTimestamp": null
          },
          "spec": {
            "template": {
              "metadata": {
                "creationTimestamp": null,
                "labels": {
                  "app.kubernetes.io/name": "mongodb"
                }
              },
              "spec": {
                "containers": [
                  {
                    "name": "${INSTANCE}-mongodb-backup",
                    "image": "mongodb:4.2.3",
                    "command": [
                      "bash",
                      "-c",
                      "mongodump  --oplog --gzip \"--archive=/media/backup/rocketchat-$(date '+%Y-%m-%dT%H-%M-%S').gz\"  --host=\"${MONGODB_REPLICA_SET_NAME}/${INSTANCE}-mongodb:27017\" \"--username=root\" \"--password=${MONGODB_ROOT_PASSWORD}\" --authenticationDatabase admin && cat <(find /media/backup -maxdepth 1 -type f) <(find /media/backup -maxdepth 1 -type f | sort | tail -n10) | sort | uniq -c | awk '{if ($1 == 1) {print $2}}' | xargs -t -I {} rm {} && find /media/backup -maxdepth 1 -type f"
                    ],
                    "resources": {
                      "requests": {
                        "cpu": "30m",
                        "memory": "512Mi"
                      },
                      "limits": {
                        "cpu": "1",
                        "memory": "1Gi"
                      }
                    },
                    "env": [
                      {
                        "name": "MONGODB_REPLICA_SET_NAME",
                        "value": "rs0"
                      },
                      {
                        "name": "MONGODB_ROOT_PASSWORD",
                        "valueFrom": {
                          "secretKeyRef": {
                            "key": "mongodb-root-password",
                            "name": "${INSTANCE}-mongodb"
                          }
                        }
                      }
                    ],
                    "volumeMounts": [
                      {
                        "name": "backup",
                        "mountPath": "/media/backup"
                      }
                    ]
                  }
                ],
                "restartPolicy": "Never",
                "volumes": [
                  {
                    "name": "backup",
                    "persistentVolumeClaim": {
                      "claimName": "${INSTANCE}-mongodb-backup"
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "status": {}
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "${INSTANCE}-mongodb-backup",
        "creationTimestamp": null,
        "labels": {
          "backup": "true",
          "app.kubernetes.io/name": "mongodb",
          "app.kubernetes.io/managed-by": "Helm",
          "app.kubernetes.io/instance": "${INSTANCE}",
          "helm.sh/chart": "mongodb"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "1Gi"
          }
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "image.openshift.io/v1",
      "metadata": {
        "name": "mongodb",
        "creationTimestamp": null
      },
      "spec": {
        "lookupPolicy": {
          "local": true
        },
        "tags": [
          {
            "name": "4.2.3",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "docker.io/bitnami/mongodb:4.2.3-debian-10-r14"
            },
            "generation": null,
            "importPolicy": {},
            "referencePolicy": {
              "type": "Local"
            }
          }
        ]
      },
      "status": {
        "dockerImageRepository": ""
      }
    }
  ]
}
